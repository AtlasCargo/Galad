{
  "id": "pipeline_d",
  "label": "Pipeline D",
  "name": "Influence-First (Meso-Scale Actors)",
  "status": "candidate",
  "stage": "scaffold",
  "last_updated": "2026-02-04",
  "goal": "Prioritize influence-sensitive sectors over strict size.",
  "constraints": {
    "open_only": false,
    "commercial_data_allowed": false,
    "public_only": false
  },
  "backbone": {
    "description": "Sector-focused seed lists with influence overlays.",
    "sources": [
      {"name": "Wikidata revenue-ranked companies", "type": "open_seed", "status": "scaffold"},
      {"name": "Wikipedia revenue lists", "type": "open_seed", "status": "scaffold"},
      {"name": "SEC company tickers (US)", "type": "open_seed", "status": "scaffold"},
      {"name": "Media groups", "type": "sector_seed", "status": "planned"},
      {"name": "Tech platforms", "type": "sector_seed", "status": "planned"},
      {"name": "Telecoms", "type": "sector_seed", "status": "planned"},
      {"name": "Defense", "type": "sector_seed", "status": "planned"},
      {"name": "Security", "type": "sector_seed", "status": "planned"}
    ]
  },
  "sources": {
    "civil_society": [
      {"name": "Large NGOs/INGOs", "type": "registry", "status": "planned"},
      {"name": "Universities", "type": "registry", "status": "planned"},
      {"name": "Unions", "type": "registry", "status": "planned"}
    ],
    "state_owned_enterprises": [
      {"name": "SOEs", "type": "registry", "status": "planned"}
    ]
  },
  "ranking": {
    "metric": "influence_score",
    "allowed_metrics": ["reach", "users", "budget", "size"],
    "notes": "Ranked by size plus influence score; weighting is subjective."
  },
  "influence_overlay": {
    "enabled": true,
    "signals": ["reach", "users", "budget", "audience"],
    "weights": {
      "revenue_usd": 0.3,
      "assets_usd": 0.2,
      "budget_usd": 0.2,
      "users": 0.15,
      "audience": 0.1,
      "member_count": 0.05,
      "employee_count": 0.1,
      "years_active": 0.05
    },
    "notes": "Influence scoring requires clear weighting rules."
  },
  "planned_outputs": [
    {"path": "data/output/top_actors_influence.csv", "description": "Ranked list by influence score."},
    {"path": "data/output/org_classification_map.csv", "description": "Sector and category tags."},
    {"path": "data/output/org_influence_signals.csv", "description": "Influence signal inputs."},
    {"path": "data/output/org_coverage_gaps.csv", "description": "Coverage estimates by country/sector."}
  ],
  "pros": [
    "Aligns with robustness/risk modeling needs",
    "Captures high-impact sectors"
  ],
  "cons": [
    "Subjective weighting",
    "Harder to standardize globally"
  ],
  "open_questions": [
    "Which influence signals are defensible and comparable?",
    "How should influence be weighted relative to size?"
  ],
  "ingestion": {
    "enabled": true,
    "seed_dir": "data/raw/seeds",
    "notes": "Seed-driven ingestion; add CSVs in data/raw/seeds (see scripts/ingest/wikidata_companies.py for open seed)."
  }
}
